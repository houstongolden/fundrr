<%= form_for(@user, :html => { :class => "sign_up_form"} ) do |u| %>

<p>
	<%= u.text_field :first_name, :placeholder => 'First Name' %>
</p>

<p>
	<%= u.text_field :last_name, :placeholder => 'Last Name' %>
</p>


<p>
	<%= u.text_field :email, :placeholder => 'Your Email' %>
</p>

<p>
	<%= u.password_field :password, :placeholder => 'New Password' %>
</p>

<p>
	<%= u.password_field :password_confirmation, :placeholder => 'Re-enter Password' %>
</p>

<%= u.submit 'Sign Up', :class => "btn-3d red" %>


<% end %>
